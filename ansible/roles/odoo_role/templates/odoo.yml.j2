
services:
  {{ odoo_service_name }}:
    container_name: "{{ odoo_container_name }}"
    image: "{{ odoo_image }}"
    depends_on:
      - "{{ db_service_name }}"
    ports:
      - "{{ odoo_port }}:8069"
    networks:
      - "{{ docker_network_name }}"
    environment:
      - HOST={{ db_service_name }}
      - USER={{ db_user }}
      - PASSWORD={{ db_password }}

  {{ db_service_name }}:
    container_name: "{{ db_container_name }}"
    image: "{{ db_image }}"
    networks:
      - "{{ docker_network_name }}"
    environment:
      - POSTGRES_DB={{ db_name }}
      - POSTGRES_PASSWORD={{ db_password }}
      - POSTGRES_USER={{ db_user }}
    volumes:
      - "{{ local_data_path }}:/var/lib/postgresql/data"

networks:
  {{ docker_network_name }}:
    driver: bridge

volumes:
  {{ docker_volume_name }}:
    driver: local